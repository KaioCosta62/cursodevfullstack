<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head.ejs') %>
</head>
<body>
  <%- include('partials/header.ejs') %>
  <section class="container">
    <%- include('partials/nav-bar.ejs') %>
    <article class="content">
      <h1>Cadastrar novos posts</h1>

      <form action="/salvar-posts" method="post">
        <% if(cadastro) { %>
          <p>Post cadastrado com sucesso!</p>
        <% } %>
        <div>
          <label for="">Título</label>
          <input type="text" name="titulo" placeholder="Insira o título do Post">
        </div>
        <div>
          <label for="">Texto</label>
          <textarea name="texto" id="" cols="30" rows="10"></textarea>
        </div>
        <div>
          <button type="submit">Cadastrar</button>
        </div>
      </form>
    </article>
  </section>
</body>
</html>